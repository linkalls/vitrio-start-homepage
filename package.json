{
  "name": "vitrio-start",
  "private": true,
  "type": "module",
  "bin": {
    "create-vitrio-start": "./scripts/create.ts"
  },
  "scripts": {
    "dev": "bun --hot src/server/dev.tsx",
    "start": "bun src/server/index.tsx",
    "build": "bun run build:highlight && bun run build:client && bun run build:css",
    "build:highlight": "node scripts/gen-highlight.mjs",
    "build:islands": "node scripts/gen-islands.ts",
    "build:client": "bun run build:islands && bunx vite build && rm -f dist/client/index.html && node scripts/fix-entry.js",
    "build:css": "bunx @tailwindcss/cli -i src/client/tailwind.css -o dist/client/assets/tailwind.css --minify",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "bun test",
    "bench:match": "bun scripts/bench-match.ts",
    "bench:hono": "bun scripts/bench-hono.ts",
    "deploy:wrangler": "bunx wrangler deploy",
    "deploy:netlify": "echo 'Bundle src/server/netlify.ts to netlify/functions/server and deploy via Netlify UI/CLI'"
  },
  "dependencies": {
    "@potetotown/vitrio": "github:linkalls/Vitrio#d4ad056",
    "hono": "^4.9.6",
    "shiki": "^3.22.0",
    "zod": "^4.1.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@types/node": "^24.0.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.8.2",
    "vite": "^7.3.1",
    "wrangler": "^4.0.0"
  }
}
